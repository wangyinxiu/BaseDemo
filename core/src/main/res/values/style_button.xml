<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Button.Transparent" parent="Button">
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="Button.Transparent.TextWhite" parent="Button.Transparent">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.Transparent.TextBlack" parent="Button.Transparent">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Button.White" parent="Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:background">@drawable/rectangle_white_corners_8</item>
    </style>


</resources>